@model TodoApp.Models.Task
@{
    ViewData["Title"] = "Detalhes";
}

<div class="text-center">
    <h1>Tarefa: @Model.Title</h1>
    @if (Model.IsDone)
    {
        <h5 class="text-success">Tarefa concluída</h5>
    }
</div>
<div class="container">
    <div class="text-center mt-5">
        <div class="form-group">
            <h5>Título:</h5>
            <p>@Model.Title</p>
        </div>
        <div class="form-group">
            <h5>Subtítulo:</h5>
            <p>@Model.Subtitle</p>
        </div>
        <div class="form-group">
            <h5>Descrição:</h5>
            <p class="text-center" style="word-wrap:break-word;">@Model.Description</p>
        </div>
        <div class="form-group">
            <h5>Data para conclusão:</h5>
            <p>@Model.ConclusionDate</p>
            @if (Model.ConclusionDate < DateTime.Today && !Model.IsDone)
            {
                <small class="text-danger">Tarefa com a data de conclusão atrasada</small>
            }
      
        </div>
        <a asp-action="Index" class="btn btn-outline-success" title="Voltar para as tarefas"><i class="fas fa-arrow-left"></i></a>
    </div>
</div>